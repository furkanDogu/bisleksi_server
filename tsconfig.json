{
  "include": ["src"],
  "exclude": ["build", "node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@appTypes/*": ["src/types/*"],
      "@errors/*": ["src/errors/*"],
      "@db_modules/*": ["src/db_models/*"],
      "@mutation/*": ["src/mutations/*"],
      "@queries/*": ["src/queries/*"],
      "@schemas/*": ["src/schemas/*"],
      "@subscriptions/*": ["src/subscriptions/*"],
      "@utils/*": ["src/utils/*"],
      "@appConfig": ["app_config.json"]
    },
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2016", "es2017.object", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "esnext",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "allowJs": true,
    "skipLibCheck": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "build",
    "strictPropertyInitialization": false
  }
}
