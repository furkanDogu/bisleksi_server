{
  "include": ["src"],
  "exclude": ["build", "node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@services/*": ["src/services/*"],
      "@appTypes/*": ["src/types/*"],
      "@models": ["src/database/models/index.ts"],
      "@mutations": ["src/graphql/mutations/index.ts"],
      "@queries": ["src/graphql/queries/index.ts"],
      "@schemas": ["src/graphql/schemas/index.ts"],
      "@subscriptions/*": ["src/graphql/subscriptions/*"],
      "@utils/*": ["src/utils/*"],
      "@appConfig": ["src/appConfig.ts"]
    },
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2016", "es2017.object", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "esnext",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "allowJs": true,
    "skipLibCheck": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "build",
    "strictPropertyInitialization": false
  }
}
